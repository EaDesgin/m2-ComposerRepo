        <arguments>
            <argument name="secureUrlList" xsi:type="array">
                <item name="eadesign_composerrepo" xsi:type="string">/eadesign_composerrepo/</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Customer\Controller\Plugin\Account">
