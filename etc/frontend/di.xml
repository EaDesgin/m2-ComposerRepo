            <argument name="allowedActions" xsi:type="array">
                <item name="auth" xsi:type="string">auth</item>
                <item name="download" xsi:type="string">download</item>
                <item name="packages" xsi:type="string">packages</item>
                <item name="packagist" xsi:type="string">packagist</item>
            </argument>
        </arguments>
    </type>
</config>